{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
		"ignore": [
			"pnpm-lock.yaml",
			"tsconfig.json",
			"tsconfig.*.json",
			"package-lock.json"
		]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "error",
				"noUnusedImports": "error"
			},
			"nursery": {},
			"performance": {
				"noDelete": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"useShorthandArrayType": "error",
				"useImportType": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off",
				"noExplicitAny": "off",
				"noRedeclare": "off"
			},
			"a11y": {
				"noSvgWithoutTitle": "off"
			},
			"complexity": {
				"noStaticOnlyClass": "off",
				"noForEach": "off"
			}
		}
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "all",
			"semicolons": "asNeeded"
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	}
}
